{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": [
    "react"
  ],
  "rules": {
    "linebreak-style": [
      "off"
    ],
    "no-unused-vars": [
      "error",
      { "vars": "local" }
    ],
    "indent": [
      "error",
      2
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "never"
    ],
    "keyword-spacing": [
      "error"
    ],
    "comma-spacing": [
      "error"
    ],
    "object-curly-spacing": [
      "error",
      "always"
    ],
    "no-console": [
      "error"
    ],
    "react/prop-types": [
      "off"
    ],
    "react/no-unescaped-entities": [
      "off"
    ],
    "react/display-name": [
      "off"
    ]
  }
}