{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [
      "eslint:recommended", 
      "plugin:react/recommended"
		],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
				"linebreak-style": [
						"off"
				],
				"no-unused-vars": [
						"error", 
						{ "vars": "local" }
				],
        "indent": [
            "error",
            "tab"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "never"
        ],
        "no-console": [
            "error"
        ],
        "react/prop-types": [
            "off"
        ],
        "react/no-unescaped-entities": [
            "off"
        ],
        "react/display-name": [
            "off"
        ]
    }
}